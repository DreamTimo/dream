<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.timo.timolib.view.CustomScrollView
        android:id="@+id/parent_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/title"/>
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginLeft="@dimen/default_margin_10"
                android:layout_marginRight="@dimen/default_margin_10"
                android:layout_marginTop="@dimen/default_margin_10"
                android:background="@color/gray"/>
            <TextView
                android:id="@+id/introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_10"
                android:layout_marginRight="@dimen/default_margin_10"
                android:layout_marginTop="@dimen/default_margin_10"
                android:text="2018寒假美国加州名校行游学团--斯坦福、硅谷励志之旅"
                android:textColor="@color/default_text_color"
                android:textSize="15sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_10"
                android:layout_marginRight="@dimen/default_margin_10">
                <TextView
                    android:id="@+id/tag_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:singleLine="true"
                    android:text="元/人"
                    android:textColor="@color/color_green"
                    android:textSize="12sp"
                />
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/tag_price"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:singleLine="true"
                    android:text="29800.0"
                    android:textColor="@color/default_text_color"
                    android:textSize="15sp"
                />
            </RelativeLayout>
            <com.timo.timolib.view.SlidingTabLayout
                android:id="@+id/slide_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="500dp"
            />
        </LinearLayout>
    </com.timo.timolib.view.CustomScrollView>
</LinearLayout>