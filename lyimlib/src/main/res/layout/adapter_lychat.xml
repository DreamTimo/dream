<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/chat_lytimebg"
        android:text=""
        android:textColor="#666666"
        android:visibility="gone"/>
    
    <TextView
        android:id="@+id/systemtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="10sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:visibility="gone"/>
    
    <LinearLayout
        android:id="@+id/message_layout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal" >
    <LinearLayout 
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
      <com.dlbase.view.CircleImageView
        android:id="@+id/iv_left_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:src="@drawable/image_default"
        android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_chat_layout"
        android:layout_width="fill_parent"
        android:gravity="center_vertical"
        
        android:layout_height="wrap_content">
        <!--语音 -->
      <RelativeLayout 
          android:id="@+id/rl_voie_layout"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:visibility="gone"> 
           <!-- vioce from -->
      <LinearLayout 
          android:id="@+id/ll_voie_fromlayout"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:visibility="gone">
          
          <LinearLayout
              android:id="@+id/ll_vioce_frombackground"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:minWidth="50dp"
              android:background="@drawable/chatfrom_bg"
              android:gravity="center"
              android:orientation="vertical">
          <ImageView
            android:id="@+id/iv_from_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="40dp"
            android:src="@drawable/playvoice_from_lyanimation" />
          </LinearLayout>
        <TextView
            android:id="@+id/tv_from_length"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="3&apos;&apos;" />
       <ImageView
            android:id="@+id/iv_voice_fromunread"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="5dp" />
      </LinearLayout>
       <!-- vioce to -->
       <LinearLayout 
          android:id="@+id/ll_voie_tolayout"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:gravity="center_vertical|right"
          android:orientation="horizontal"
          android:visibility="gone">

        <TextView
            android:id="@+id/tv_to_length"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="3&apos;&apos;" />
          <LinearLayout
              android:id="@+id/ll_vioce_tobackground"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/chatto_bg"
              android:gravity="right|center_vertical"
              android:minWidth="50dp"
              android:orientation="vertical">
          <ImageView
            android:id="@+id/iv_to_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:minWidth="40dp"
            android:src="@drawable/playvoice_to_lyanimation" />
          </LinearLayout>
       
      </LinearLayout>
      </RelativeLayout>
      <!--名片 项目-->
      <LinearLayout
           android:id="@+id/ll_card_background" 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/chatfrom_bg"
           android:orientation="vertical"
           android:visibility="gone">
           <TextView
              android:id="@+id/tv_card_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="10dp"
			   android:textColor="@color/white"
              android:textSize="12sp"/>
           <View 
               android:layout_width="wrap_content"
               android:layout_height="0.5dp"
               android:layout_margin="5dp"
               android:background="#D8D8D8"/>
           <LinearLayout 
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:gravity="center_vertical"
               android:layout_marginBottom="5dp"
               android:orientation="horizontal">
	           <com.dlbase.view.CircleImageView
	               android:id="@+id/iv_card_picture" 
	               android:layout_width="50dp"
	               android:layout_height="50dp"
	               android:layout_marginLeft="10dp"
	               android:layout_gravity="center_vertical"
	               android:src="@drawable/image_default"/>
	          <LinearLayout 
	               android:layout_width="fill_parent"
	               android:layout_height="wrap_content"
	               android:layout_margin="5dp"
	               android:gravity="center_vertical"
	               android:orientation="vertical">
			         <TextView
			            android:id="@+id/tv_card_name"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            
			            android:layout_marginLeft="5dp"
						 android:textColor="@color/white"
			            android:textSize="14sp"/>
			          <TextView
			            android:id="@+id/tv_card_privateNumber"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="5dp"
			            android:layout_marginLeft="5dp"
						  android:textColor="@color/white"
			            android:textSize="12sp"/>
	          </LinearLayout>
       </LinearLayout>
    </LinearLayout>
      <!--文件 -->
       <LinearLayout
           android:id="@+id/ll_files_background" 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/chatfrom_bg"
           android:orientation="horizontal"
           android:gravity="center_vertical"
           android:visibility="gone">
           <ImageView
               android:id="@+id/iv_files_picture" 
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:layout_margin="5dp"/>
	         <LinearLayout
	           android:layout_width="fill_parent"
	           android:layout_height="wrap_content"
	           android:layout_margin="5dp"
	           android:gravity="center_vertical"
	           android:orientation="vertical">
		          <TextView
		            android:id="@+id/tv_file_name"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:textColor="@color/white"
		            android:textSize="12sp"/>
		          
		          <LinearLayout
		              android:layout_width="fill_parent"
		              android:layout_height="wrap_content"
		              android:gravity="center_vertical"
		              android:orientation="horizontal">
		          
		              <TextView
		            android:id="@+id/tv_file_size"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="5dp"
						  android:textColor="@color/white"
		            android:textSize="12sp"/>
		              <View
		                  android:layout_width="0dp"
		                  android:layout_height="wrap_content"
		                  android:layout_weight="1"/>
		              <TextView
		            android:id="@+id/tv_file_down"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="5dp"
		            android:text="未下载"
						  android:textColor="@color/white"
		            android:textSize="12sp"/>
		              
		              </LinearLayout>
	       </LinearLayout>
     </LinearLayout>
      <!--图片、地理位置 -->
      <LinearLayout
        android:id="@+id/ll_picture_background" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone">
      <com.dlbase.view.RoundImageView
               android:id="@+id/iv_picture" 
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:scaleType="centerCrop"
               android:padding="1dp"
               android:layout_gravity="center"/>
          </LinearLayout>
      <!--文字 -->
      <LinearLayout
         android:id="@+id/ll_text_background"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="@drawable/chatfrom_bg"
         android:visibility="gone">

         <com.lykj.emojicon.EmojiconTextView
            android:id="@+id/tv_text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:maxWidth="225.0dp"
            android:textColor="#ff000000"
            android:textSize="14sp" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_chat_state" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp">
        <ProgressBar
            android:id="@+id/progressbar" 
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/send_failure" 
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/msg_fail"
            android:visibility="gone"/>
    	</RelativeLayout>
	</RelativeLayout>
   
    </LinearLayout>
    <LinearLayout 
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
       <com.dlbase.view.CircleImageView 
			android:id="@+id/iv_right_image"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:padding="10dp"
			android:src="@drawable/image_default"
			android:visibility="gone"/>
    </LinearLayout>
   
  </LinearLayout>
</LinearLayout>
