<?xml version="1.0" encoding="utf-8"?>
<LinearLayout   
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@color/white">
   <TextView 
       android:id="@+id/tv_wechat"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginRight="@dimen/px50"
       android:drawableTop="@drawable/icon_wechat"
       android:textColor="@color/tv6"
       android:textSize="@dimen/px24"
       android:layout_marginTop="@dimen/px50"
       android:layout_marginBottom="@dimen/px50"
       android:gravity="center_horizontal"
       android:drawablePadding="@dimen/px20"
       android:layout_gravity="center"
       android:text="@string/showShareDialog_wechat"
       />
    <TextView 
       android:id="@+id/tv_favorite"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="@dimen/px50"
       android:drawableTop="@drawable/icon_wechat"      
       android:textColor="@color/tv6"
       android:textSize="@dimen/px24"
       android:layout_marginTop="@dimen/px50"
       android:layout_marginBottom="@dimen/px50"
       android:gravity="center_horizontal"
       android:drawablePadding="@dimen/px20"
       android:layout_gravity="center"
       android:text="@string/showShareDialog_favorite"
       />
</LinearLayout>